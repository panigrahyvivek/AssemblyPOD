<mvc:View controllerName="sap.custom.assemblypod.controller.AssemblyView" displayBlock="true" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core" 
    xmlns="sap.m" 
>
	<Page id="assemblyPage" showFooter="false" showHeader="false" showSubHeader="false">
		<content>

                    <VBox id="mainLayout" width="100%" height="100%" direction="Column" >
                        <items>
                            <core:Fragment fragmentName="sap.custom.assemblypod.view.fragments.HeaderBar" type="XML" />
                            <HBox class="sapDmeHorizontalSeparator" height="2px" width="100%"/>
                            <core:Fragment fragmentName="sap.custom.assemblypod.view.fragments.AssemblyContent" type="XML" />
                        </items>
                    </VBox>
		</content>
	</Page>
</mvc:View>