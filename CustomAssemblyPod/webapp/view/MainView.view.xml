<mvc:View controllerName="sap.custom.assemblypod.controller.MainView" displayBlock="true" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core" 
    xmlns="sap.m" 
>
    <Page id="mainPage" showFooter="false" showHeader="false" showSubHeader="false">
        <content>
            <HBox id="mainPageContent" fitContainer="true">
                <items>
                    <VBox id="mainLayout" width="100%" height="100%" direction="Column" >
                        <items>
                            <core:Fragment fragmentName="sap.custom.assemblypod.view.fragments.HeaderBar" type="XML" />
                            <core:Fragment fragmentName="sap.custom.assemblypod.view.fragments.MainContent" type="XML" />
                        </items>
                    </VBox>
                </items>
            </HBox>
        </content>
    </Page>
</mvc:View>